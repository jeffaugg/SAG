generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Usuario {
  id        String   @id  @db.Uuid @default(uuid())
  nome      String
  cargo     Cargo
  cpf       String   @unique
  senha     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("usuarios")
}


enum Cargo {
  Enfermeiro
  Medico
  ADM
}